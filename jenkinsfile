pipeline{
	agent any
	stages{
		stage("Pull Latest Image"){
			steps{
				sh "docker pull suketdocker/deals"
			}
		}
		stage("Start Grid"){
			steps{
				sh "docker-compose up -d hub chrome firefox"
			}
		}
		stage("Run Test"){
			steps{
				sh "docker-compose up dealsCpuFirefox dealsCpuChrome"
			}
			
		}
		
	}
	post{
		always{
			archiveArtifacts artifacts: 'output/**'
			sh "docker-compose down"
			sh "sudo rm -rf output/"
			emailext (
					  body: '${FILE,path="output/newOutputChrome/cucumber_html_report/index.html"}',
                      subject: "Deals smoke test ${currentBuild.currentResult}: Job ${env.JOB_NAME}",
                      to: 'suket@houzen.co.uk'
                	)
		}
	}
}
/*/mail bcc: '', body: '''Hi All,
Deals smoke test was performed.
Please check the logs for the result.''', cc: '', from: '', replyTo: '', subject: 'Deals daily smoke test result', to: 'suket@houzen.co.uk'*/