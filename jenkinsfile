pipeline{
	agent any
	stages{
		stage("Pull Latest Image"){
			steps{
				sh "docker pull suketdocker/deals"
			}
		}
		stage("Start Grid"){
			steps{
				sh "docker-compose up -d hub chrome"
			}
		}
		stage("Run Test"){
			steps{
				sh "docker-compose up dealsCpuChrome"
			}
			
		}
		
	}
	post{
		always{
			archiveArtifacts artifacts: 'output/**'
			cucumber customCssFiles: '', customJsFiles: '', failedFeaturesNumber: -1, failedScenariosNumber: -1, failedStepsNumber: -1, fileIncludePattern: '**/*.json', jsonReportDirectory: 'output/newOutputChrome/cucumber-reports/Cucumber.json', pendingStepsNumber: -1, reportTitle: 'Smoke test', skippedStepsNumber: -1, sortingMethod: 'ALPHABETICAL', undefinedStepsNumber: -1
					  
                     emailext (to: 'suket@houzen.co.uk', 
                     		   replyTo: 'suket@houzen.co.uk', 
                     		   subject: "Email Report for Deals smoke test ", 
                     		   body: readFile("output/newOutputChrome/cucumber_html_report/index.html"), mimeType: 'text/html')
                	
			sh "docker-compose down"
			
			
		}
	}
}
